{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["src"]
}
